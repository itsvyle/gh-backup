{
	"$schema": "https://golangci-lint.run/jsonschema/golangci.jsonschema.json",
	"run": {
		"tests": false,
		"timeout": "1m",
		"build-tags": [
			"buildvcs=false"
		]
	},
	"linters": {
		"enable": [
			"decorder",
			"staticcheck",
			"revive",
			"misspell",
			"exhaustive",
			"goconst",
			"nilnil",
			"perfsprint",
			"stylecheck",
			"usestdlibvars",
			"mnd",
			"goimports"
		]
	},
	"linters-settings": {
		"decorder": {
			"dec-order": [
				"type",
				"const",
				"var",
				"func"
			]
		},
		"goconst": {
			"ignore-calls": true
		},
		"mnd": {
			"ignored-numbers": [
				"100",
				"1000",
				"0644"
			],
			"ignored-functions": [
				"time.Sleep"
			]
		}
	}
}